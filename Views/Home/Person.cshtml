@model List<Person>
<a asp-action="Magazine" class="btn btn-primary">Show Magazines</a>
<a asp-action="Subscription" class="btn btn-primary">Show Subscriptions</a>
<a asp-action="Registerppl" class="btn btn-primary">Show People</a>
<h2>People List</h2>

<table>
    <thead>
        <tr>
            <th>Person Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.PersonId</td>
                <td>@person.Name</td>
                <td>@person.CreatedAt</td>
                <td>@person.UpdatedAt</td>
                 <td><a asp-action="DeletePerson" asp-route-id="@person.PersonId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>